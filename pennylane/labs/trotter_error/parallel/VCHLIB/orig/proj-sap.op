LABELS-section

qr=q[-2.1731849]

#-------$PATH = path of the proj-POTFIT calculations-----------
AC0 = natpot{$PATH/cos0}
AC1 = natpot{$PATH/cos1}
AC2 = natpot{$PATH/cos2}
AC3 = natpot{$PATH/cos3}

AS1 = natpot{$PATH/sin1}
AS2 = natpot{$PATH/sin2}
AS3 = natpot{$PATH/sin3}
#----------------------------------------------------------------
  kp1 = shift[1]
  km1 = shift[-1]
  kp2 = shift[2]
  km2 = shift[-2]
  kp3 = shift[3]
  km3 = shift[-3]

end-labels-section

