OP_DEFINE-section
title
6D Marquardt's SAP PES for CO/Cu(100)
end-title
end-OP_DEFINE-section

PARAMETER-SECTION

mass1 = 28.00, AMU    # Total mass of CO molecule              # SS model
#mass1 = 19.436, AMU   # m_Cu*(m_C + m_O)/(m_Cu* + m_C + m_O)  # SM model
mu = 6.857, AMU      # Reduced mass of CO molecule
mass_x = mass1
mass_y = mass1
mass_z = mass1
mass_r = mu

end-PARAMETER-section

